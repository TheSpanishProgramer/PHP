<ul id="listaPedido" data-idpedido="{% if not pedidos %}false{% else %}{{ pedidos.id }} {% endif %}">
    {% set total = 0 %}
    {% for producto in pedidos.productos %}
    <li data-id="{{ producto.id }}">
        <span class="cantidad"></span><span class="nombreProducto">{{producto.nombre}}</span><div class='borrarCarrito'><span class="precio">{{producto.precio}}</span><span class='moneda'>€</span></div></li>
    {% set total = total + producto.precio %}
    {% endfor %}
</ul>
<div id="totalPedido">Total: {{ total }}€</div>