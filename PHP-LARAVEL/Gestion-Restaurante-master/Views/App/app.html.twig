{% extends "Common/common.html.twig" %}


{% block header %}
<link rel="stylesheet" type="text/css" href="../../Views/css/app.css">
<script type="text/javascript" src="../../Views/js/app.js"></script>
{% endblock %}



{% block contenido %}
<navbar class="navCat">
    <ul>
        {% for categoria in categorias %}
        {% if categoria.id != 1 %}
        <li id="categoria{{ categoria.id }}" class="appCat pointer">
            <img class="imgCategoriaBig" src="{{ categoria.imgDir }}">
            <div class="nombreCat">
            {{ categoria.nombre }}
            </div>
        </li>
        {% endif %}
        {% endfor %}
    </ul>
</navbar>

<div class="navPro">
{% for categoria in categorias %} 
{% if categoria.id != 1 %}
<ul class="categoria{{ categoria.id }} hidden">
    {% for producto in productos %}
    {% if producto.categoria == categoria.id %}
    <li id="{{ producto.id }}" class="añadirCarrito pointer">
        <div><img class="imgProducto"  src="{{ producto.imgDir}}"></div>
        <div class="contenidoProducto"><span class="nombreProducto">{{ producto.nombre }}</span><span class="precio"><span class="precioProducto">{{producto.precio}}</span>€</span></div>
    </li>
    {% endif %}
    {% endfor %}
</ul>
{% endif %}
{% endfor %}
</div>

<div class="navTools">
    <div class="divhamburguesa pointer">
        <img class="hamburguesa" src="../../Views/img/hamburguesa.png">
    </div>
    
    <div class="carritoP">
        <h3>Consumiciones</h3>
        <div id="carrito">
            <ul id="listaCarrito">


            </ul>
        </div>
        <div>Total: <span id="totalCarrito">0</span>€</div>
        <button id="botonPedir">Pedir</button>
    </div>
    <div class="pedidoP">
        <h3>Pedido</h3>
        <div id="pedido">
        
        
        </div>
        <button id="botonPagar">Pagar</button>
    </div>
</div>
{% endblock %}


